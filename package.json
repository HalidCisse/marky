{
  "name": "marky",
  "version": "0.1.0",
  "description": "A free web text editor that supports markdown",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "lite": "lite-server",
    "typings": "typings",
    "postinstall": "typings install"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/HalidCisse/marky.git"
  },

  "keywords": [
    "markdown",
    "marky"
  ],

  "author": "Halid Cisse <halidoucse@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HalidCisse/marky/issues"
  },

  "homepage": "https://github.com/HalidCisse/marky#readme",
  
  "dependencies": {
    "@angular/common": "^2.4.1",
    "@angular/compiler": "^2.4.1",
    "@angular/core": "^2.4.1",
    "@angular/forms": "^2.4.1",
    "@angular/http": "^2.4.1",
    "@angular/platform-browser": "^2.4.1",
    "@angular/platform-browser-dynamic": "^2.4.1",
    "@angular/router": "^3.2.0",
    "core-js": "^2.4.1",
    "moment": "^2.17.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.2",
    "systemjs": "^0.19.40",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "lite-server": "^2.2.0",
    "tslint": "^3.7.4",
    "typescript": "^2.0.2",
    "typings": "^1.0.4"
  }
}
